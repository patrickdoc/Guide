html {
    height: 100%;
}

body {
    margin: 0;
    padding: 0;
    font-family: 'Lora', serif;
    font-size: 21px;
    line-height: 142%;
    height: 100%;
    display: -webkit-flex;
    display: flex;
    -webkit-flex: 1 0 auto;
    flex: 1 0 auto;
    -webkit-flex-direction: column;
    flex-direction: column;
}

h1 {
    font-size: 34px;
    text-align: center;
}

h2 {
    font-size: 24px;
}

nav ul {
    margin: 0;
    padding: 0;
    list-style-type: none;
    background-color: #DDD;
    overflow: hidden;
}

nav li:first-child {
    float: left;
}

nav li p {
    display: block;
    text-align: center;
    padding: 14px 16px;
    margin: 0;
}

nav li {
    float: right;
}

nav li a {
    display: block;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
}

#flex-container {
    display: -webkit-flex;
    display: flex;
    -webkit-flex: 1;
    flex: 1;
    justify-content: space-between;
    background-color: #FFF;
}

/*
